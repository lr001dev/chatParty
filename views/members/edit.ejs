<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <header>
      <nav>
        <% include ../partials/nav.ejs %>
      </nav>
    </header>
    <main>

      <div class="container">
        <h1>Update Profile</h1>
        <div class="class="">
          <form action="/members/<%=currentUser._id%>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="username">Name</label>
              <input class="form-control" name="userName" id="username" type="text" value="<%= currentUser.userName %>">
            </div>
            <div class="form-group">
              <label for="pass">Password</label>
              <input class="form-control" name="password" id="pass" type="hidden" value="<%= currentUser.password %>">
            </div>
            <div class="form-group">
              <label for="firstname">First Name</label>
              <input class="form-control" name="firstName" id="firstname" type="text" value="<%= currentUser.firstName %>">
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input class="form-control" name="img" id="image" type="text" value="<%= currentUser.img %>">
            </div>
            <div class="form-group">
              <label for="mybio">My Bio</label>
              <input class="form-control" name="bio" id="mybio" type="text" value="<%= currentUser.bio %>">
            </div>
            <button type="submit" class="btn btn-primary">Update Profile</button>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
