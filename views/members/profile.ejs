<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <header>
      <nav>
        <% include ../partials/nav.ejs %>
      </nav>
    </header>
    <main class="container-fluid">
      <div class="border rounded">
        <div class="jumbotron">
          <h1 class="display-4">Hello, <%= foundUser.firstName %></h1>
          <p class="lead">About Me:</p>
            <p class="lead"><%= foundUser.bio %></p>
            <hr class="my-4">
            <p></p>
          </div>
          <a class="btn btn-primary btn-lg btn-block" href="/party-rooms/create" role="button">Create Party Room</a>
          <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Room Name</th>
                <th scope="col">Description</th>
                <th scope="col">Visit</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% foundUser.rooms.forEach((partyRoom, index)=> { %>
                <tr>
                <th scope="row"><%= index %></th>
                <td><%=partyRoom.roomName%></td>
                <td><%=partyRoom.description%></td>
                <td><a href="/party-rooms/<%=partyRoom._id%>/edit">Visit</a></td>
                <td><a href="/party-rooms/<%=partyRoom._id%>/edit">Edit</a></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
          <form action="/log-in?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-primary btn-lg" role="button">Log Out</button>
          </form>
          <a class="btn btn-primary btn-lg" href="/members/<%= foundUser.userName %>/edit" role="button">Edit Profile</a>
        </div>
        <a class="btn btn-primary btn-lg btn-block" href="/party-rooms/" role="button">View All Chat Rooms</a>
    </main>
  </body>
</html>
