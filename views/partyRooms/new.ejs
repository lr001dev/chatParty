<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <main class="container-fluid">
          <div class="jumbotron">
            <h1 class="display-4">Create Party Room</h1>
            <p class="lead"></p>
              <p class="lead"></p>
              <hr class="my-4">
              <p></p>
            </div>
          <form action="/party-rooms" method="POST">
            <div class="form-group">
              <label for="roomname">Party Room Name</label>
              <input class="form-control" name="roomName" id="roomname" type="text" value="">
            </div>
            <div class="form-group">
              <label for="identifier">Room Identifier</label>
              <input class="form-control" name="nameSpace" id="identifier" type="text" value="">
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input class="form-control" name="image" id="image" type="text" value="">
            </div>
            <div class="form-group">
              <label for="image">Desciption</label>
              <input class="form-control" name="description" id="description" type="text" value="">
            </div>
            <div class="form-group">
              <input class="form-control" name="creator" id="" type="hidden" value=<%= currentUser.userName %>>
            </div>
            <button type="submit" class="btn btn-primary">Create Party Room</button>
          </form><br>
        <a class="btn btn-outline-dark" href="/members/<%= currentUser.userName %>" role="button">Back To Profile</a>
    </main>

  </body>
</html>
