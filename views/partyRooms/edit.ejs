<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <header>
      <nav>
        <% include ../partials/nav.ejs %>
      </nav>
    </header>
    <main class="container-fluid">
      <div class="jumbotron bg-white">
        <h1 class="display-4">Hello <%=currentUser.firstName%>, Update <%=partyRoom.roomName%> Party Room</h1>
        <p class="lead"></p>
          <p class="lead"></p>
          <hr class="my-4">
          <p></p>
        </div>
          <form action="/party-rooms/<%= partyRoom.id %>?_method=PUT" method="POST">
              <div class="form-group">
                <label for="roomname">Party Room Name</label>
                <input class="form-control" name="roomName" id="roomname" type="text" value="<%= partyRoom.roomName %>">
              </div>
              <div class="form-group">
                <label for="identifier">Room Identifier</label>
                <input class="form-control" name="nameSpace" id="identifier" type="hidden" value="<%= partyRoom.nameSpace %>">
              </div>
              <div class="form-group">
                <label for="image">Image</label>
                <input class="form-control" name="image" id="image" type="text" value="<%= partyRoom.img %>">
              </div>
              <div class="form-group">
                <label for="image">Desciption</label>
                <input class="form-control" name="description" id="description" type="text" value="<%= partyRoom.description %>">
              </div>
              <div class="form-group">
                <input class="form-control" name="creator" id="" type="hidden" value="<%= partyRoom.creator %>">
              </div>
              <button type="submit" class="btn btn-primary">Update Party Room</button>
            </form>
    </main>
  </body>
</html>
